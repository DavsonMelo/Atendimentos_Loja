<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_toast_background"
    android:padding="10dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/toast_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_alert" /> <!-- Substitua ic_logo pelo seu ícone -->

    <!-- Texto -->
    <TextView
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/adlam_displayy"
        android:textSize="18sp"
        android:text="Mensagem personalizada" /> <!-- Texto padrão, será substituído programaticamente -->

</LinearLayout>
